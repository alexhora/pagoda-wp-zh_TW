web1:
  name: wp
  shared_writable_dirs:
    - app/wp-content/themes/
    - app/wp-content/plugins/
    - app/wp-content/uploads/
  document_root: app/
  php_extensions:
    - mysql
    - curl
    - eaccelerator
  after_build:
    - "mkdir app/wp-content/themes"
    - "mkdir app/wp-content/plugins"
  before_deploy:
    - "tar -C app/wp-content -zx < <(curl http://elct9620.github.com/pagoda-wp-zh_TW/package/wordpress-3.4.1.tar.gz)"
db1:
  name: wpdb
  type: mysql
